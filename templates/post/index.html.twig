{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Created</th>
                <th>Title</th>
                <th>Teaser</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.getCreated() | date("Y-m-d H:i") }} by {{ post.getUser() ? post.getUser().getEmail() : 'n/a' }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.teaser | nl2br }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a class="btn btn-success" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('post_new') }}">Create new</a>
{% endblock %}
